@model CombinedVM
<!-- shop section -->

<section class="shop_section layout_padding">
    <div class="container">
        <div class="heading_container heading_center">
            <h2>
                Latest Products
            </h2>
        </div>
        <div class="row">
            @foreach (var item in Model.Products)
            {
                <div class="col-sm-6 col-md-4 col-lg-3">
                    <div class="box">
                        <a href="">
                            <div class="img-box">
                                <img src="@item.Image" alt="">
                            </div>
                            <div class="detail-box">
                                <h6>
                                    @item.Title
                                </h6>
                                <h6>
                                    Price
                                    <span>
                                        $ @item.Price
                                    </span>
                                </h6>
                            </div>
                            <div class="new">
                                <span>
                                    @item.IsNew
                                </span>
                            </div>
                        </a>
                    </div>
                </div>
            }
        </div>
        <div class="btn-box">
            <a href="">
                View All Products
            </a>
        </div>
    </div>
</section>

<!-- end shop section -->